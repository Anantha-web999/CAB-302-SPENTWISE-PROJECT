<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #e6f0ff;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.trial.CompareExpensesController">

    <!-- Title -->
    <Label layoutX="282.0" layoutY="25.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #003366;" text="Compare Monthly Expenses" />

    <!-- Month Selection -->
    <Label layoutX="177.0" layoutY="76.0" text="Month 1:" />
    <ComboBox fx:id="month1Combo" layoutX="240.0" layoutY="72.0" prefWidth="150" />
    <Label layoutX="433.0" layoutY="76.0" text="Month 2:" />
    <ComboBox fx:id="month2Combo" layoutX="492.0" layoutY="72.0" prefWidth="150" />

    <!-- Bar Chart -->
    <BarChart fx:id="barChart" layoutX="88.0" layoutY="101.0" prefHeight="258.0" prefWidth="603.0">
        <xAxis>
            <CategoryAxis label="Category" />
        </xAxis>
        <yAxis>
            <NumberAxis label="Amount ($)" />
        </yAxis>
    </BarChart>

    <!-- Table -->
    <TableView fx:id="comparisonTable" layoutX="165.0" layoutY="359.0" prefHeight="140" prefWidth="500" style="-fx-background-color: white; -fx-border-color: #1e90ff;">
        <columns>
            <TableColumn fx:id="colCategory" prefWidth="140" text="Category" />
            <TableColumn fx:id="colMonth1" prefWidth="120" text="Month 1 ($)" />
            <TableColumn fx:id="colMonth2" prefWidth="120" text="Month 2 ($)" />
            <TableColumn fx:id="colDifference" prefWidth="120" text="Difference" />
        </columns>
    </TableView>

    <!-- Buttons -->
    <Button layoutX="240.0" layoutY="547.0" onAction="#goBackToInsights" style="-fx-background-color: #1e90ff; -fx-text-fill: white;" text="Back" />
    <Button layoutX="387.0" layoutY="547.0" onAction="#loadComparisonData" style="-fx-background-color: #1e90ff; -fx-text-fill: white;" text="Refresh" />
    <Button layoutX="548.0" layoutY="547.0" onAction="#exportToCSV"
            style="-fx-background-color: #1e90ff; -fx-text-fill: white;" text="Export" />

</AnchorPane>
