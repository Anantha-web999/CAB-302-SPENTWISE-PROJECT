<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.trial.CompareExpensesController"
            prefWidth="600" prefHeight="500"
            style="-fx-background-color: #e6f0ff;">

    <!-- Title -->
    <Label layoutX="160" layoutY="10" text="Compare Monthly Expenses"
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #003366;" />

    <!-- Month Selection -->
    <Label layoutX="50" layoutY="50" text="Month 1:"/>
    <ComboBox fx:id="month1Combo" layoutX="110" layoutY="45" prefWidth="150"/>
    <Label layoutX="280" layoutY="50" text="Month 2:"/>
    <ComboBox fx:id="month2Combo" layoutX="340" layoutY="45" prefWidth="150"/>

    <!-- Bar Chart -->
    <BarChart fx:id="barChart" layoutX="50" layoutY="90" prefWidth="500" prefHeight="200">
        <xAxis>
            <CategoryAxis label="Category"/>
        </xAxis>
        <yAxis>
            <NumberAxis label="Amount (₹)"/>
        </yAxis>
    </BarChart>

    <!-- Table -->
    <TableView fx:id="comparisonTable" layoutX="50" layoutY="300" prefWidth="500" prefHeight="140"
               style="-fx-background-color: white; -fx-border-color: #1e90ff;">
        <columns>
            <TableColumn fx:id="colCategory" text="Category" prefWidth="140"/>
            <TableColumn fx:id="colMonth1" text="Month 1 (₹)" prefWidth="120"/>
            <TableColumn fx:id="colMonth2" text="Month 2 (₹)" prefWidth="120"/>
            <TableColumn fx:id="colDifference" text="Difference" prefWidth="120"/>
        </columns>
    </TableView>

    <!-- Buttons -->
    <Button layoutX="120" layoutY="455" text="Back"
            onAction="#goBackToInsights"
            style="-fx-background-color: #1e90ff; -fx-text-fill: white;"/>
    <Button layoutX="250" layoutY="455" text="Refresh" onAction="#loadComparisonData"
            style="-fx-background-color: #1e90ff; -fx-text-fill: white;"/>
    <Button layoutX="370" layoutY="455" text="Export"
            style="-fx-background-color: #1e90ff; -fx-text-fill: white;"/>

</AnchorPane>
