<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600" prefWidth="1000.0" style="-fx-background-color: #f0f8ff;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.trial.insights_AI.SpendingAdvisorController">

    <Label layoutX="361.0" layoutY="30.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="AI Spending Advisor" />

    <TextArea fx:id="userInput" layoutX="30" layoutY="80" prefHeight="120" prefWidth="913.0" promptText="Describe your spending concern..." wrapText="true" />



    <Button layoutX="33.0" layoutY="212.0" mnemonicParsing="false" onAction="#clearChat" style="-fx-background-color: #2c80b4;  /* blue tone */            -fx-text-fill: white;            -fx-font-weight: bold;            -fx-font-size: 16px;            -fx-padding: 8 20;            -fx-background-radius: 8;" text="Clear" />


    <Button layoutX="30.0" layoutY="532.0" mnemonicParsing="false" onAction="#goBack" style="-fx-background-color: #2c80b4;  /* blue tone */            -fx-text-fill: white;            -fx-font-weight: bold;            -fx-font-size: 16px;            -fx-padding: 8 20;            -fx-background-radius: 8;" text="Back" />

    <Button layoutX="822.0" layoutY="209.0" mnemonicParsing="false" onAction="#handleGetAdvice" style="-fx-background-color: #2c80b4;  /* blue tone */            -fx-text-fill: white;            -fx-font-weight: bold;            -fx-font-size: 16px;            -fx-padding: 8 20;            -fx-background-radius: 8;" text="Get Advice" />


    <TextArea fx:id="aiResponse" editable="false" layoutX="30" layoutY="270" prefHeight="238.0" prefWidth="914.0" promptText="AI response will appear here..." wrapText="true" />
   <AnchorPane prefHeight="200.0" prefWidth="200.0" />




</AnchorPane>
