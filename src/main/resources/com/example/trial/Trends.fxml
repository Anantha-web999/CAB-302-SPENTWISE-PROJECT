<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #e6f0ff;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.trial.TrendsController">

    <!-- Title -->
    <Label layoutX="287.0" layoutY="14.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #003366;" text="Weekly / Monthly Trends" />

    <!-- Dropdown -->
    <Label layoutX="267.0" layoutY="72.0" text="View by:" />
    <ComboBox fx:id="timeRangeCombo" layoutX="326.0" layoutY="68.0" prefWidth="150" />

    <!-- Line Chart -->
    <LineChart fx:id="trendChart" layoutX="50" layoutY="113.0" prefHeight="375.0" prefWidth="702.0">
        <xAxis>
            <CategoryAxis label="Time" />
        </xAxis>
        <yAxis>
            <NumberAxis label="Spending ($)" />
        </yAxis>
    </LineChart>

    <!-- Buttons -->
    <Button layoutX="267.0" layoutY="513.0" onAction="#goBack" style="-fx-background-color: #1e90ff; -fx-text-fill: white;" text="Back" />
    <Button layoutX="459.0" layoutY="513.0" onAction="#loadTrendData" style="-fx-background-color: #1e90ff; -fx-text-fill: white;" text="Refresh" />

</AnchorPane>
