<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.trial.TrendsController"
            prefWidth="600" prefHeight="400"
            style="-fx-background-color: #e6f0ff;">

    <!-- Title -->
    <Label layoutX="180" layoutY="10" text="Weekly / Monthly Trends"
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #003366;" />

    <!-- Dropdown -->
    <Label layoutX="50" layoutY="50" text="View by:"/>
    <ComboBox fx:id="timeRangeCombo" layoutX="110" layoutY="45" prefWidth="150" />

    <!-- Line Chart -->
    <LineChart fx:id="trendChart" layoutX="50" layoutY="90"
               prefWidth="500" prefHeight="220">
        <xAxis>
            <CategoryAxis label="Time"/>
        </xAxis>
        <yAxis>
            <NumberAxis label="Spending (â‚¹)"/>
        </yAxis>
    </LineChart>

    <!-- Buttons -->
    <Button layoutX="140" layoutY="330" text="Back" onAction="#goBack"
            style="-fx-background-color: #1e90ff; -fx-text-fill: white;" />
    <Button layoutX="250" layoutY="330" text="Refresh" onAction="#loadTrendData"
            style="-fx-background-color: #1e90ff; -fx-text-fill: white;" />

</AnchorPane>
