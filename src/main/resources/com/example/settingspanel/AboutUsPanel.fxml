<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.trial.settings.AboutUsPanelController">
    <left>
        <VBox prefWidth="245" style="-fx-background-color: #1a5276;">
            <children>
                <StackPane alignment="CENTER" prefHeight="200.0">
                    <children>
                        <VBox alignment="CENTER">
                            <children>
                                <StackPane>
                                    <ImageView fx:id="logoImage" fitHeight="150.0" fitWidth="150.0" preserveRatio="true">
                                        <image>
                                            <Image url="/Logo.png" />
                                        </image>
                                    </ImageView>
                                </StackPane>
                            </children>
                        </VBox>
                    </children>
                </StackPane>
                <Button fx:id="accountButton" alignment="BASELINE_LEFT" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleAccountButton" prefHeight="50.0" style="-fx-background-color: #1a5276; -fx-text-fill: #fbfcfc; -fx-font-family: 'Lato'; -fx-font-size: 14px;" text="Account">
                    <padding>
                        <Insets left="20.0" />
                    </padding>
                </Button>
                <Button fx:id="appPreferencesButton" alignment="BASELINE_LEFT" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleAppPreferencesButton" prefHeight="50.0" style="-fx-background-color: #1a5276; -fx-text-fill: #fbfcfc; -fx-font-family: 'Lato'; -fx-font-size: 14px;" text="App Preferences">
                    <padding>
                        <Insets left="20.0" />
                    </padding>
                </Button>
                <Button fx:id="helpSupportButton" alignment="BASELINE_LEFT" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleHelpSupportButton" prefHeight="50.0" style="-fx-background-color: #1a5276; -fx-text-fill: #fbfcfc; -fx-font-family: 'Lato'; -fx-font-size: 14px;" text="Help &amp; Support">
                    <padding>
                        <Insets left="20.0" />
                    </padding>
                </Button>
                <Button fx:id="aboutUsButton" alignment="BASELINE_LEFT" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleAboutUsButton" prefHeight="50.0" style="-fx-background-color: #17202a; -fx-text-fill: #fbfcfc; -fx-font-family: 'Lato'; -fx-font-weight: bold; -fx-font-size: 14px;" text="About Us">
                    <padding>
                        <Insets left="20.0" />
                    </padding>
                </Button>
            </children>
        </VBox>
    </left>
    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
        <content>
            <VBox spacing="20.0">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>
                <children>
                    <VBox alignment="CENTER" spacing="20.0">
                        <children>
                            <ImageView fx:id="centerLogoImage" fitHeight="80.0" fitWidth="80.0" preserveRatio="true">
                                <image>
                                    <Image url="/Logo.png" />
                                </image>
                            </ImageView>
                            <Label text="SpentWise" style="-fx-text-fill: #1f618d; -fx-font-family: 'Lato'; -fx-font-weight: bold; -fx-font-size: 28px;" />
                            <Label text="Smart Expense Tracking Made Simple" style="-fx-text-fill: #1f618d; -fx-font-family: 'Lato'; -fx-font-size: 16px;" />
                        </children>
                    </VBox>
                    <Separator />

                    <TitledPane animated="false" collapsible="false" expanded="true" text="About SpentWise" style="-fx-font-family: 'Lato'; -fx-font-weight: bold;">
                        <content>
                            <VBox spacing="15.0">
                                <children>
                                    <Label text="SpentWise is a comprehensive expense tracking application designed to help individuals and families manage their finances effectively. Our mission is to make financial management accessible, intuitive, and powerful for everyone." wrapText="true" style="-fx-font-family: 'Lato'; -fx-font-size: 13px;" />
                                    <Label text="Whether you're tracking daily expenses, planning budgets, or analyzing spending trends, SpentWise provides the tools you need to take control of your financial future." wrapText="true" style="-fx-font-family: 'Lato'; -fx-font-size: 13px;" />
                                </children>
                            </VBox>
                        </content>
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                    </TitledPane>

                    <TitledPane animated="false" collapsible="false" expanded="true" text="Key Features" style="-fx-font-family: 'Lato'; -fx-font-weight: bold;">
                        <content>
                            <GridPane hgap="10.0" vgap="15.0">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="20.0" minWidth="20.0" prefWidth="20.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="520.0" prefWidth="520.0" />
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                </rowConstraints>
                                <children>
                                    <Label text="•" style="-fx-font-family: 'Lato'; -fx-font-size: 13px; -fx-text-fill: #1f618d;" />
                                    <Label text="Intuitive expense tracking and categorization" wrapText="true" GridPane.columnIndex="1" style="-fx-font-family: 'Lato'; -fx-font-size: 13px;" />

                                    <Label text="•" style="-fx-font-family: 'Lato'; -fx-font-size: 13px; -fx-text-fill: #1f618d;" GridPane.rowIndex="1" />
                                    <Label text="Comprehensive budget planning and monitoring" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-font-family: 'Lato'; -fx-font-size: 13px;" />

                                    <Label text="•" style="-fx-font-family: 'Lato'; -fx-font-size: 13px; -fx-text-fill: #1f618d;" GridPane.rowIndex="2" />
                                    <Label text="Visual spending trends and analytics" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-font-family: 'Lato'; -fx-font-size: 13px;" />

                                    <Label text="•" style="-fx-font-family: 'Lato'; -fx-font-size: 13px; -fx-text-fill: #1f618d;" GridPane.rowIndex="3" />
                                    <Label text="Multi-currency support for international users" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="3" style="-fx-font-family: 'Lato'; -fx-font-size: 13px;" />

                                    <Label text="•" style="-fx-font-family: 'Lato'; -fx-font-size: 13px; -fx-text-fill: #1f618d;" GridPane.rowIndex="4" />
                                    <Label text="Data export and backup capabilities" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="4" style="-fx-font-family: 'Lato'; -fx-font-size: 13px;" />

                                    <Label text="•" style="-fx-font-family: 'Lato'; -fx-font-size: 13px; -fx-text-fill: #1f618d;" GridPane.rowIndex="5" />
                                    <Label text="Secure and private - your data stays on your device" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="5" style="-fx-font-family: 'Lato'; -fx-font-size: 13px;" />
                                </children>
                            </GridPane>
                        </content>
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                    </TitledPane>

                    <TitledPane animated="false" collapsible="false" expanded="true" text="Version Information" style="-fx-font-family: 'Lato'; -fx-font-weight: bold;">
                        <content>
                            <GridPane hgap="10.0" vgap="15.0">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="150.0" prefWidth="150.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="400.0" prefWidth="400.0" />
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                </rowConstraints>
                                <children>
                                    <Label text="Version:" style="-fx-font-family: 'Lato'; -fx-font-size: 13px; -fx-font-weight: bold;" />
                                    <Label fx:id="versionLabel" text="1.0.0" style="-fx-font-family: 'Lato'; -fx-font-size: 13px;" GridPane.columnIndex="1" />

                                    <Label text="Build Date:" style="-fx-font-family: 'Lato'; -fx-font-size: 13px; -fx-font-weight: bold;" GridPane.rowIndex="1" />
                                    <Label fx:id="buildDateLabel" text="May 25, 2025" style="-fx-font-family: 'Lato'; -fx-font-size: 13px;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                    <Label text="Java Version:" style="-fx-font-family: 'Lato'; -fx-font-size: 13px; -fx-font-weight: bold;" GridPane.rowIndex="2" />
                                    <Label fx:id="javaVersionLabel" style="-fx-font-family: 'Lato'; -fx-font-size: 13px;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                </children>
                            </GridPane>
                        </content>
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                    </TitledPane>

                    <TitledPane animated="false" collapsible="false" expanded="true" text="Development Team" style="-fx-font-family: 'Lato'; -fx-font-weight: bold;">
                        <content>
                            <VBox spacing="15.0">
                                <children>
                                    <Label text="SpentWise is developed by a dedicated team of software engineers and financial experts committed to creating the best expense tracking experience." wrapText="true" style="-fx-font-family: 'Lato'; -fx-font-size: 13px;" />
                                    <Label text="We believe that managing your finances shouldn't be complicated or time-consuming. That's why we've designed SpentWise to be both powerful and user-friendly." wrapText="true" style="-fx-font-family: 'Lato'; -fx-font-size: 13px;" />
                                </children>
                            </VBox>
                        </content>
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                    </TitledPane>
                </children>
            </VBox>
        </content>
    </ScrollPane>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" style="-fx-background-color: #fbfcfc;">
            <children>
                <Button fx:id="homeButton" mnemonicParsing="false" onAction="#goToHomePage" prefHeight="30.0" prefWidth="115.0" style="-fx-background-color: #e0e0e0; -fx-font-family: 'Lato'; -fx-font-size: 13px;" text="Back" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>