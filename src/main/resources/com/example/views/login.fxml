<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.trial.logincontroller.LoginController"
            style="-fx-background-color: #ffffff;">

    <center>
        <VBox alignment="CENTER" spacing="15" style="-fx-padding: 20; -fx-max-width: 350;">
            <!-- Logo -->
            <ImageView fitWidth="90" fitHeight="80" preserveRatio="true">
                <Image url="@/spentwiselogo.png"/>
            </ImageView>

            <!-- Title -->
            <Text text="Welcome Back" style="-fx-font-size: 22; -fx-font-weight: bold; -fx-fill: #2563eb;"/>

            <!-- Login Form -->
            <VBox spacing="10" style="-fx-padding: 20 0;">
                <TextField fx:id="emailField" promptText="Email" style="-fx-pref-height: 35;"/>
                <PasswordField fx:id="passwordField" promptText="Password" style="-fx-pref-height: 35;"/>

                <Button text="Login" onAction="#handleLogin"
                        style="-fx-font-size: 14; -fx-pref-width: 120; -fx-pref-height: 35;
                              -fx-background-color: #2563eb; -fx-text-fill: white; -fx-background-radius: 5;"/>

                <HBox alignment="CENTER" spacing="5">
                    <Text text="New user?" style="-fx-fill: #64748b;"/>
                    <Button text="Create account" onAction="#navigateToSignup"
                            style="-fx-background-color: transparent; -fx-text-fill: #2563eb; -fx-padding: 0;"/>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>