<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<!-- Full-window white background -->
<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.trial.logincontroller.SignupController"
            style="-fx-background-color: #ffffff;">

    <!-- Back button at top -->
    <top>
        <Button text="← Back"
                onAction="#navigateToLogin"
                style="-fx-background-color: transparent;
                       -fx-text-fill: #2563eb;
                       -fx-font-size: 14;
                       -fx-padding: 10;"/>
    </top>

    <!-- Main signup form -->
    <center>
        <VBox alignment="CENTER"
              spacing="15"
              style="-fx-padding: 15; -fx-max-width: 350;">

            <!-- Logo -->
            <ImageView fitWidth="60"
                       fitHeight="60"
                       preserveRatio="true">
                <Image url="@/spentwiselogo.png"/>
            </ImageView>

            <!-- Heading -->
            <Text text="Create Account"
                  style="-fx-font-size: 22;
                         -fx-font-weight: bold;
                         -fx-fill: #2563eb;"/>

            <!-- Inline error label -->
            <Label fx:id="signupErrorLabel"
                   text=""
                   visible="false"
                   style="-fx-text-fill: red; -fx-font-size: 12;"/>

            <!-- Form fields -->
            <VBox spacing="10" style="-fx-padding: 10 0;">

                <!-- Full Name -->
                <TextField fx:id="fullNameField"
                           promptText="Full Name"
                           style="-fx-pref-height: 35;"/>

                <!-- Email -->
                <TextField fx:id="emailField"
                           promptText="Email"
                           style="-fx-pref-height: 35;"/>

                <!-- Password + Show/Hide -->
                <VBox spacing="4">
                    <HBox alignment="CENTER_LEFT" spacing="5">
                        <PasswordField fx:id="passwordField"
                                       promptText="Password"
                                       style="-fx-pref-height: 35;"
                                       HBox.hgrow="ALWAYS"/>
                        <TextField fx:id="visiblePasswordField"
                                   promptText="Password"
                                   visible="false"
                                   managed="false"
                                   style="-fx-pref-height: 35;"
                                   HBox.hgrow="ALWAYS"/>
                        <Button fx:id="togglePasswordButton"
                                text="Show"
                                onAction="#togglePasswordVisibility"
                                style="-fx-background-color: transparent;
                                       -fx-text-fill: #2563eb;
                                       -fx-font-weight: bold;"/>
                    </HBox>
                </VBox>

                <!-- Confirm Password + Show/Hide -->
                <VBox spacing="4">
                    <HBox alignment="CENTER_LEFT" spacing="5">
                        <PasswordField fx:id="confirmPasswordField"
                                       promptText="Confirm Password"
                                       style="-fx-pref-height: 35;"
                                       HBox.hgrow="ALWAYS"/>
                        <TextField fx:id="visibleConfirmPasswordField"
                                   promptText="Confirm Password"
                                   visible="false"
                                   managed="false"
                                   style="-fx-pref-height: 35;"
                                   HBox.hgrow="ALWAYS"/>
                        <Button fx:id="toggleConfirmPasswordButton"
                                text="Show"
                                onAction="#toggleConfirmPasswordVisibility"
                                style="-fx-background-color: transparent;
                                       -fx-text-fill: #2563eb;
                                       -fx-font-weight: bold;"/>
                    </HBox>
                </VBox>

                <!-- Sign Up button -->
                <Button text="Sign Up"
                        onAction="#handleSignup"
                        style="-fx-font-size: 14;
                               -fx-pref-width: 120;
                               -fx-pref-height: 35;
                               -fx-background-color: #2563eb;
                               -fx-text-fill: white;
                               -fx-background-radius: 5;"/>

                <!-- Already have an account? -->
                <HBox alignment="CENTER"
                      spacing="5">
                    <Text text="Already have an account?"
                          style="-fx-fill: #64748b;"/>
                    <Button text="Login"
                            onAction="#navigateToLogin"
                            style="-fx-background-color: transparent;
                                   -fx-text-fill: #2563eb;
                                   -fx-padding: 0;"/>
                </HBox>

            </VBox>
        </VBox>
    </center>
</BorderPane>
